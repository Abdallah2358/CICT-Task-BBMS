<h2>Donations</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Donation<br>Request Id</th>
                <th scope="col">Donar Id</th>
                <th scope="col">Blood Type</th>
                <th scope="col">In Stock</th>
            </tr>
        </thead>
        <tbody>
            <% donations.forEach(donation=> { %>
                <tr>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" href="/donations/<%= donation.id %>">
                            <%= donation.id %>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary"
                            href="/donation-requests/<%= donation.donation_request_id %>">
                            <%= donation.donation_request_id %>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" href="/donation-requests/<%= donation.donor_id %>">
                            <%= donation.donor_id %>
                        </a>
                    </td>
                    <td>
                        <%= donation.blood_type.name %>
                    </td>
                    <td>
                        <%= donation.in_stock ? "True" :'False'%>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>

<%- contentFor('styles') %>
    <%- contentFor('script') %>